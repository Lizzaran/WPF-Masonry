<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <TargetFrameworks>net461;netcoreapp3.0</TargetFrameworks>
    <UseWPF>true</UseWPF>
    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageId>wpfmasonry</PackageId>
    <Title>WPF Masonry</Title>
     <AssemblyName>Masonry</AssemblyName>
    <Product>$(AssemblyName) ($(TargetFramework))</Product>
    <Authors>Lizzaran newky2k</Authors>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Version>2.0</Version>
    <Description>Fluid layout grid for WPF (Net Core 3.x and .Net Framework)</Description>
    <PackageProjectUrl>https://github.com/newky2k/WPF-Masonry</PackageProjectUrl>
    <RepositoryUrl>https://github.com/newky2k/WPF-Masonry</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageTags>WPF Masonry Fluid</PackageTags>
    <PackageReleaseNotes>Updated to work with Net Core
    </PackageReleaseNotes>
    <Copyright>Copyright 2013 - 2016 Nikita Bernthaler</Copyright>
  </PropertyGroup>
</Project>